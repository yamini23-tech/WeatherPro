<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity"
    android:background="#2A9AB6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/state"
        style="@style/textStyle"/>

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_heavycloud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/state"
        app:layout_constraintVertical_bias="0.338" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Temp :"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/act_temp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/cloud"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/min_temp"
        style="@style/textStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/min_temp"
        android:layout_marginTop="8dp"
        android:id="@+id/minTempdata"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/min_temp"
        app:layout_constraintEnd_toEndOf="@id/min_temp"/>

    <TextView
        android:id="@+id/act_temp"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Act Temp :"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/max_temp"
        app:layout_constraintStart_toEndOf="@id/min_temp"
        app:layout_constraintTop_toBottomOf="@id/cloud" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/act_temp"
        android:layout_marginTop="8dp"
        android:id="@+id/actTempdata"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/act_temp"
        app:layout_constraintEnd_toEndOf="@id/act_temp"/>



    <TextView
        android:id="@+id/max_temp"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Max Temp :"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/act_temp"
        app:layout_constraintTop_toBottomOf="@id/cloud"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/max_temp"
        android:layout_marginTop="8dp"
        android:id="@+id/maxTempdata"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/max_temp"
        app:layout_constraintEnd_toEndOf="@id/max_temp"/>





</androidx.constraintlayout.widget.ConstraintLayout>